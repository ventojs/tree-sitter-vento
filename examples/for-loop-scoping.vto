<!DOCTYPE html>
<html lang="en">
<head>
  <title>For Loop Variable Scoping Example</title>
</head>
<body>
  <nav aria-label="Pagination">
    <ul>
      {{ for i of pages }}
        <li>
          <a href="/page/{{ i }}" aria-label="Page {{ i }}">
            {{ i }}
          </a>
        </li>
      {{ /for }}
    </ul>
  </nav>

  <section>
    <h2>Items List</h2>
    {{ for item of items }}
      <div class="item" data-id="{{ item.id }}">
        <h3>{{ item.name }}</h3>
        <p>{{ item.description }}</p>
      </div>
    {{ /for }}
  </section>

  <section>
    <h2>Nested Loops</h2>
    {{ for category of categories }}
      <div class="category">
        <h3>{{ category.name }}</h3>
        <ul>
          {{ for product of category.products }}
            <li data-product="{{ product.id }}">
              {{ product.name }} - ${{ product.price }}
            </li>
          {{ /for }}
        </ul>
      </div>
    {{ /for }}
  </section>

  <section>
    <h2>Index Example</h2>
    <ol>
      {{ for idx of indices }}
        <li value="{{ idx }}">Item number {{ idx }}</li>
      {{ /for }}
    </ol>
  </section>
</body>
</html>
